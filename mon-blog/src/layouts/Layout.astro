---
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
        <!-- Ajout de la police depuis Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
		
        <title>{title} | Mon Blog Astro</title>
	</head>
	<body>
		<header>
            <Navigation />
        </header>
		<main>
			<slot />
		</main>
        <footer>
            <p>© {new Date().getFullYear()} Alpha 3. Tous droits réservés.</p>
        </footer>
	</body>
</html>

<style is:global>
    /* Définition des variables de couleur et de la police */
	:root {
		--font-family-base: 'Inter', sans-serif;
        --color-text: #333;
        --color-primary: #1e40af; /* Bleu qu'on utilisait déjà */
        --color-bg: #ffffff;
        --color-bg-alt: #f4f4f4;
        --border-radius: 8px;
	}

	html {
		font-family: var(--font-family-base);
		background-color: var(--color-bg-alt);
        color: var(--color-text);
	}

	body {
		margin: 0;
        /* Le layout est maintenant centré par le body et non par le main */
		display: flex;
        flex-direction: column;
		align-items: center;
        min-height: 100vh;
	}

    header, main, footer {
        width: 100%;
		max-width: 800px;
		padding: 0 2rem; /* Padding horizontal pour le contenu */
    }

    main {
        flex-grow: 1; /* Permet au main de prendre l'espace et de pousser le footer en bas */
        background-color: var(--color-bg);
        padding-top: 2rem;
        padding-bottom: 2rem;
    }

	main h1, main h2, main h3 {
    line-height: 1.3;
}
main h1 {
    font-size: 2.5rem;
}
main h2 {
    font-size: 2rem;
    border-bottom: 1px solid #eaeaea;
    padding-bottom: 0.5rem;
    margin-top: 3rem;
}
main p {
    line-height: 1.7;
    font-size: 1.1rem;
}
main a {
    color: var(--color-primary);
}
main ul, main ol {
    padding-left: 1.5rem;
}
main li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
}
main code {
    background-color: var(--color-bg-alt);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
}

    footer {
        text-align: center;
        padding-top: 2rem;
        padding-bottom: 2rem;
        color: #777;
        font-size: 0.9rem;
    }
</style>